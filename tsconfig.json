{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "lib": [
        "es2019"
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
          "@src/*": ["src/*"]
      },
      "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "legacy"]
}
